{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "target": "ES2022",
        "module": "ESNext",
        "rootDir": "./src/",
        "outDir": "./prod/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./"
    },
    "files": [
        "src/index.ts"
    ],
    "include": ["./src**/*.ts", "../discord/src/index.ts"],
    "exclude": ["node_modules","prod", "**/*.spec.ts"],
}